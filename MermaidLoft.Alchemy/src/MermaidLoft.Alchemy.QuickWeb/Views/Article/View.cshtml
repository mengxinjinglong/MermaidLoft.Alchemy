@using MermaidLoft.Alchemy.BaseDomain.ArticleDomain;
@model Article
@{
    if (Model != null)
    {
        ViewData["Title"] = Model.Title;
    }
}

@if (Model == null)
{
    <h1>没有找到对应的文章。</h1>
}
else
{
    <div class="text-left">
        <div class="page-header">
            <h1>@Model.Title</h1>
            <p><small>发布时间：@Model.AddTime.ToString("s")&nbsp;&nbsp;&nbsp;阅读（@Model.Hits）</small></p>
        </div>
        <div>
            @Html.Raw(Model.Content)
        </div>
    </div>
}